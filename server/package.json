    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/node": "10.14.8",
    "dotenv-cli": "1.4.0",
    "nodemon": "1.19.1",
    "prisma": "1.34.0",
    "rimraf": "2.6.3",
    "ts-node": "7.0.1",
